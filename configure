#!/bin/bash

# ManyJson é¡¹ç›®é…ç½®è„šæœ¬
# éµå¾ªä¸šç•Œæ ‡å‡†çš„ configure è„šæœ¬å®è·µ

set -e

# é¢œè‰²å®šä¹‰
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# æ‰“å°å¸¦é¢œè‰²çš„æ¶ˆæ¯
print_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# é»˜è®¤é…ç½®
BUILD_TYPE="Debug"
BUILD_DIR="build"
INSTALL_PREFIX="/usr/local"
ENABLE_TESTS="ON"
DOWNLOAD_GTEST="ON"
CLEAN_BUILD="OFF"

# æ˜¾ç¤ºå¸®åŠ©ä¿¡æ¯
show_help() {
    echo "ManyJson é¡¹ç›®é…ç½®è„šæœ¬"
    echo ""
    echo "ç”¨æ³•: $0 [é€‰é¡¹]"
    echo ""
    echo "é€‰é¡¹:"
    echo "  -h, --help              æ˜¾ç¤ºæ­¤å¸®åŠ©ä¿¡æ¯"
    echo "  -d, --debug             æ„å»ºç±»å‹: Debug (é»˜è®¤)"
    echo "  -r, --release           æ„å»ºç±»å‹: Release"
    echo "  -b, --build-dir DIR     æ„å»ºç›®å½• (é»˜è®¤: build)"
    echo "  -p, --prefix DIR        å®‰è£…å‰ç¼€ (é»˜è®¤: /usr/local)"
    echo "  -t, --no-tests          ç¦ç”¨æµ‹è¯•"
    echo "  -g, --no-gtest          ä¸ä¸‹è½½ Google Test (ä½¿ç”¨ç³»ç»Ÿå®‰è£…çš„)"
    echo "  -c, --clean             æ¸…ç†æ„å»ºç›®å½•"
    echo ""
    echo "ç¤ºä¾‹:"
    echo "  $0                      # ä½¿ç”¨é»˜è®¤é…ç½®"
    echo "  $0 -r -b build_release  # Release æ„å»ºåˆ° build_release ç›®å½•"
    echo "  $0 -t -g                # ç¦ç”¨æµ‹è¯•ï¼Œä½¿ç”¨ç³»ç»Ÿ Google Test"
}

# è§£æå‘½ä»¤è¡Œå‚æ•°
while [[ $# -gt 0 ]]; do
    case $1 in
        -h|--help)
            show_help
            exit 0
            ;;
        -d|--debug)
            BUILD_TYPE="Debug"
            shift
            ;;
        -r|--release)
            BUILD_TYPE="Release"
            shift
            ;;
        -b|--build-dir)
            BUILD_DIR="$2"
            shift 2
            ;;
        -p|--prefix)
            INSTALL_PREFIX="$2"
            shift 2
            ;;
        -t|--no-tests)
            ENABLE_TESTS="OFF"
            shift
            ;;
        -g|--no-gtest)
            DOWNLOAD_GTEST="OFF"
            shift
            ;;
        -c|--clean)
            CLEAN_BUILD="ON"
            shift
            ;;
        *)
            print_error "æœªçŸ¥é€‰é¡¹: $1"
            show_help
            exit 1
            ;;
    esac
done

print_info "å¼€å§‹é…ç½® ManyJson é¡¹ç›®..."

# æ£€æŸ¥å¿…è¦çš„å·¥å…·
check_dependencies() {
    print_info "æ£€æŸ¥ä¾èµ–..."
    
    # æ£€æŸ¥ CMake
    if ! command -v cmake &> /dev/null; then
        print_error "CMake æœªæ‰¾åˆ°ï¼Œè¯·å®‰è£… CMake"
        exit 1
    fi
    
    # æ£€æŸ¥ç¼–è¯‘å™¨
    if ! command -v g++ &> /dev/null && ! command -v clang++ &> /dev/null; then
        print_error "C++ ç¼–è¯‘å™¨æœªæ‰¾åˆ°ï¼Œè¯·å®‰è£… g++ æˆ– clang++"
        exit 1
    fi
    
    # æ£€æŸ¥ Git (å¦‚æœéœ€è¦ä¸‹è½½ Google Test)
    if [[ "$DOWNLOAD_GTEST" == "ON" ]] && ! command -v git &> /dev/null; then
        print_error "Git æœªæ‰¾åˆ°ï¼Œè¯·å®‰è£… Git"
        exit 1
    fi
    
    print_success "ä¾èµ–æ£€æŸ¥é€šè¿‡"
}

# ä¸‹è½½ Google Test
download_gtest() {
    if [[ "$DOWNLOAD_GTEST" == "OFF" ]]; then
        print_info "è·³è¿‡ Google Test ä¸‹è½½ï¼Œä½¿ç”¨ç³»ç»Ÿå®‰è£…çš„ç‰ˆæœ¬"
        return
    fi
    
    GTEST_DIR="third_party/googletest"
    GTEST_VERSION="1.12.1"
    
    if [[ -d "$GTEST_DIR" ]]; then
        print_info "Google Test å·²å­˜åœ¨ï¼Œè·³è¿‡ä¸‹è½½"
    else
        print_info "ä¸‹è½½ Google Test v$GTEST_VERSION..."
        mkdir -p third_party
        git clone --depth 1 --branch release-$GTEST_VERSION \
            https://github.com/google/googletest.git "$GTEST_DIR"
        print_success "Google Test ä¸‹è½½å®Œæˆ"
    fi
}

# æ¸…ç†æ„å»ºç›®å½•
clean_build() {
    if [[ "$CLEAN_BUILD" == "ON" ]] && [[ -d "$BUILD_DIR" ]]; then
        print_info "æ¸…ç†æ„å»ºç›®å½•: $BUILD_DIR"
        rm -rf "$BUILD_DIR"
    fi
}

# é…ç½® CMake
configure_cmake() {
    print_info "é…ç½® CMake..."
    print_info "æ„å»ºç±»å‹: $BUILD_TYPE"
    print_info "æ„å»ºç›®å½•: $BUILD_DIR"
    print_info "å®‰è£…å‰ç¼€: $INSTALL_PREFIX"
    print_info "å¯ç”¨æµ‹è¯•: $ENABLE_TESTS"
    print_info "ä¸‹è½½ Google Test: $DOWNLOAD_GTEST"
    
    mkdir -p "$BUILD_DIR"
    cd "$BUILD_DIR"
    
    cmake .. \
        -DCMAKE_BUILD_TYPE="$BUILD_TYPE" \
        -DCMAKE_INSTALL_PREFIX="$INSTALL_PREFIX" \
        -DENABLE_TESTS="$ENABLE_TESTS" \
        -DDOWNLOAD_GTEST="$DOWNLOAD_GTEST"
    
    print_success "CMake é…ç½®å®Œæˆ"
}

# ä¸»å‡½æ•°
main() {
    check_dependencies
    download_gtest
    clean_build
    configure_cmake
    
    print_success "é…ç½®å®Œæˆï¼"
    echo ""
    echo "ğŸ“‹ ä¸‹ä¸€æ­¥æ“ä½œï¼š"
    echo "  æ„å»ºé¡¹ç›®: make -C $BUILD_DIR"
    echo "  è¿è¡Œæµ‹è¯•: make -C $BUILD_DIR test"
    echo "  å®‰è£…é¡¹ç›®: make -C $BUILD_DIR install"
    echo "  æ¸…ç†æ„å»º: make -C $BUILD_DIR clean"
}

# è¿è¡Œä¸»å‡½æ•°
main "$@" 