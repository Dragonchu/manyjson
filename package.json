{
  "name": "manyjson-vue",
  "version": "0.5.0",
  "private": true,
  "description": "JSON Schema Manager built with Vue 3 and Electron",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rm -rf node_modules dist dist-electron out release"
  },
  "build": {
    "appId": "com.manyjson.app",
    "productName": "ManyJson",
    "directories": {
      "output": "dist"
    },
    "icon": "assets/icon.png",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@lezer/highlight": "^1.2.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "codemirror": "^6.0.2",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-codemirror6": "^1.3.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/tsconfig": "^0.5.0",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^5.4.19",
    "vite-plugin-electron": "^0.15.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  }
}
